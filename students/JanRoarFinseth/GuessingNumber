let tall = Math.floor(Math.random() * 9) + 1;
let Output = '';
console.log("Guess the correct number between 1 og 10...");
let antallTries = 0;

process.stdin.setEncoding("utf-8");

process.stdin.on('data', function(data) {
    /*if (process.argv.length >= 3) {
        input = process.argv[2];*/

    if (data == tall) {
        antallForsok++;
        console.log("Correct");
        console.log("You used: " + antallForsok + " tries");


        process.exit(1);

    } else if (data > tall) {
        console.log("This number is too high, try a lower number!");
        antallForsok++;


    } else if (data < tall) {
        console.log("This number is too low, try a higher number!");
        antallForsok++;
    };

}); 
